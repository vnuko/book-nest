# Server
PORT=3000
NODE_ENV=development

# Logging
LOG_LEVEL=DEVELOPMENT

# Paths
SOURCE_PATH=./source
EBOOKS_PATH=./ebooks
LOGS_PATH=./logs
DB_PATH=./data/booknest.db

# Groq AI
GROQ_API_KEY=your-groq-api-key
GROQ_MODEL=llama-3.3-70b-versatile
BATCH_SIZE=25
AGENT_TIMEOUT=60000

# Retry
MAX_RETRIES=5
RETRY_BASE_DELAY=10000

# Calibre
CALIBRE_PATH=/usr/bin/ebook-convert
